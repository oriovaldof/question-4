{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ include('post/_style.html.twig') }}
 {% endblock %}

{% block title %}Post{% endblock %}

{% block body %}
    
    
            <h1>Post</h1>
            <a href="{{ path('post_new') }}"  class="btn btn-primary">Criar Postagem</a>

            <table class="table">
                <thead  class="thead-light">
                    <tr>
                        <th>Id</th>
                        <th>Titulo</th>
                        <th>Autor</th>
                        <th>Data Postagem</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{ post.id }}</td>
                        <td>{{ post.title }}</td>
                        <td>{{ post.author }}</td>
                        <td>{{ post.postedAt ? post.postedAt|date('d-m-Y') : '' }}</td>
                        <td>
                            <a href="{{ path('post_show', {'id': post.id}) }}"  class="btn btn-primary">show</a>
                            <a href="{{ path('post_edit', {'id': post.id}) }}"  class="btn btn-primary">editar</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Nenhum registro localizado</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
    
{% endblock %}
