{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block stylesheets %}
    {{ include('post/_style.html.twig') }}
 {% endblock %}


{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ post.author }}</td>
            </tr>
            <tr>
                <th>PostedAt</th>
                <td>{{ post.postedAt ? post.postedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_edit', {'id': post.id}) }}"  class="btn btn-success">Editar</a>

    <a href="{{ path('post_index') }}"   class="btn btn-primary">Voltar</a>


    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
